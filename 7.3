#include <stdio.h>

int pin = 13;
int _pin=pin;
int incomingByte=0;
int _dottime=250;   

void dot() {  
  digitalWrite(_pin,HIGH);
  delay(_dottime);
  digitalWrite(_pin,LOW);
  delay(_dottime);
}  
void dash() { 
  digitalWrite(_pin,HIGH);
  delay(_dottime*4);
  digitalWrite(_pin,LOW);
  delay(_dottime);
}
void cs(){
  digitalWrite(_pin,LOW);
  delay(_dottime*3);
 }
void ws(){
